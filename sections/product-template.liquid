<!-- Breadcrumb navigation -->
<nav class="breadcrumb">
  {% for part in breadcrumbs %}
    {% if part.url %}
      <a href="{{ part.url }}">{{ part.name }}</a>
    {% else %}
      <span>{{ part.name }}</span>
    {% endif %}
  {% endfor %}
</nav>

<!-- Example product template -->
<div class="product-description">
    {{ product.description }}
</div>

<!-- Product Price -->
<div class="product-price">
    {{ product.price }}
</div>

<!-- Include color swatches -->
{% include 'color-swatch' %}

<!-- Include countdown timer -->
{% include 'countdown-timer' %}

<!-- Include Stock Counter -->
{% include 'stock-counter' %}

<!-- Before/After Image Slider within product description -->
<div class="before-after-slider">
    <img src="path_to_before_image.jpg" alt="Before" class="before-image">
    <img src="path_to_after_image.jpg" alt="After" class="after-image">
    <div class="slider-handle"></div>
</div>

<!-- Quick View Button -->
<div class="product-grid-item">
  <button class="quick-view-button" data-product-id="{{ product.id }}">Quick View</button>
</div>
