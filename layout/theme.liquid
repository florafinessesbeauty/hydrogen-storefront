<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title }}</title>
    {{ content_for_header }}
    <link rel="stylesheet" href="{{ 'app.css' | asset_url }}">
</head>
<body>
    <nav class="breadcrumb">
      {% for part in breadcrumbs %}
        {% if part.url %}
          <a href="{{ part.url }}">{{ part.name }}</a>
        {% else %}
          <span>{{ part.name }}</span>
        {% endif %}
      {% endfor %}
    </nav>

    {% section 'header' %}
    
    <!-- Search Bar -->
    <div class="search-bar">
        <form action="/search" method="get">
            <input type="text" name="q" placeholder="Search products..." aria-label="Search">
            <button type="submit">Search</button>
        </form>
    </div>

    <div id="age-verifier" class="age-verifier">
        <div class="age-verifier-content">
            <h2>Are you 18 or older?</h2>
            <button id="age-yes">Yes</button>
            <button id="age-no">No</button>
        </div>
    </div>

    <div class="banner" id="discount-banner">
        <p>Use code SAVE20 for 20% off!</p>
    </div>

    <!-- Before/After Image Slider below the header -->
    <div class="before-after-slider">
        <img src="path_to_before_image.jpg" alt="Before" class="before-image">
        <img src="path_to_after_image.jpg" alt="After" class="after-image">
        <div class="slider-handle"></div>
    </div>

    {{ content_for_layout }}
    {{ content_for_footer }}

    <button id="back-to-top" class="back-to-top" title="Go to top">Top</button>

    <script src="{{ 'banner.js' | asset_url }}"></script>
</body>
</html>
