<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'header.page_title' | t }}</title>
    {{ content_for_header }}
    <link rel="stylesheet" href="{{ 'app.css' | asset_url }}">
</head>
<body>
    <nav class="breadcrumb">
      {% for part in breadcrumbs %}
        {% if part.url %}
          <a href="{{ part.url }}">{{ part.name }}</a>
        {% else %}
          <span>{{ part.name }}</span>
        {% endif %}
      {% endfor %}
    </nav>

    {% section 'header' %}
    
    <!-- Search Bar -->
    <div class="search-bar">
        <form action="/search" method="get">
            <input type="text" name="q" placeholder="{{ 'header.search_placeholder' | t }}" aria-label="Search">
            <button type="submit">{{ 'header.search_button' | t }}</button>
        </form>
    </div>

    <!-- Include Countdown Timer -->
    {% include 'countdown-timer' %}

    <div id="age-verifier" class="age-verifier">
        <div class="age-verifier-content">
            <h2>{{ 'header.age_verifier_title' | t }}</h2>
            <button id="age-yes">{{ 'header.yes_button' | t }}</button>
            <button id="age-no">{{ 'header.no_button' | t }}</button>
        </div>
    </div>

    <div class="banner" id="discount-banner">
        <p>{{ 'header.discount_message' | t }}</p>
    </div>

    <!-- Before/After Image Slider below the header -->
    <div class="before-after-slider">
        <img src="path_to_before_image.jpg" alt="Before" class="before-image">
        <img src="path_to_after_image.jpg" alt="After" class="after-image">
        <div class="slider-handle"></div>
    </div>

    {{ content_for_layout }}
    {{ content_for_footer }}

    <button id="back-to-top" class="back-to-top" title="{{ 'footer.back_to_top' | t }}">{{ 'footer.back_to_top' | t }}</button>

    <script src="{{ 'banner.js' | asset_url }}"></script>
</body>
</html>
